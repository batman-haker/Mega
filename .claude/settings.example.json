{
  "permissions": {
    "allow": [
      "Bash(dir:*)",
      "Bash(test:*)",
      "Bash(python:*)",
      "Bash(py:*)",
      "Bash(pip install:*)",
      "Bash(streamlit run:*)",
      "Bash(git:*)",
      "WebFetch(domain:github.com)",
      "Read(//c/Xscrap/x-financial-analyzer/data/cache/**)"
    ],
    "deny": [],
    "ask": []
  },
  "mcp": {
    "servers": {
      "filesystem": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "C:\\MEGABOT\\data",
          "C:\\MEGABOT\\logs",
          "C:\\Xscrap\\x-financial-analyzer\\data\\cache"
        ],
        "description": "Access to data files, logs, and Twitter cache"
      },
      "sequential-thinking": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sequential-thinking"
        ],
        "description": "Enhanced reasoning for complex financial analysis"
      },
      "memory": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-memory"
        ],
        "description": "Persistent memory and knowledge graph for analysis context"
      },
      "gemini": {
        "command": "npx",
        "args": [
          "-y",
          "github:aliargun/mcp-server-gemini"
        ],
        "env": {
          "GOOGLE_API_KEY": "your_google_api_key_here"
        },
        "description": "Google Gemini AI API integration for enhanced analysis"
      }
    }
  }
}
